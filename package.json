{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-tester": "^6.4.0",
    "eslint": "^6.0.1",
    "eslint-config-indico": "^1.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "babel-plugin-flask-urls": "file:packages/babel-plugin-flask-urls",
    "flask-urls": "file:packages/flask-urls"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "./babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**"
    ],
    "testRegex": "./(packages/[^/]+/)?tests/.+\\.js$",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^babel-plugin-flask-urls$": "<rootDir>/packages/babel-plugin-flask-urls/src/plugin.js",
      "^flask-urls$": "<rootDir>/packages/flask-urls/src/build.js"
    }
  },
  "scripts": {
    "build": "lerna run build",
    "eslint": "eslint packages/ tests/",
    "test": "jest",
    "check": "jest && eslint packages/ tests/"
  }
}
